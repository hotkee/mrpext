<openerp>
    <data>
        <record model="workflow" id="wkf_productionrecord">
            <field name="name">MrpExt ProductionRecord Workflow</field>
            <field name="osv">mrpext.productionrecord</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="draft">
            <field name="name">Draft</field>
            <field name="wkf_id" ref="wkf_productionrecord"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_draft()</field>
        </record>

        <record model="workflow.activity" id="sent">
            <field name="name">Sent</field>
            <field name="wkf_id" ref="wkf_productionrecord"/>
            <field name="kind">function</field>
            <field name="action">action_sent()</field>
        </record>

        <record model="workflow.activity" id="confirmed">
            <field name="name">Confirmed</field>
            <field name="wkf_id" ref="wkf_productionrecord"/>
            <field name="kind">function</field>
            <field name="action">action_confirmed()</field>
        </record>

        <record model="workflow.transition" id="productionrecord_draft_to_sent">
            <field name="act_from" ref="draft"/>
            <field name="act_to" ref="sent"/>
            <field name="signal">send</field>
        </record>

        <record model="workflow.transition" id="productionrecord_sent_to_confirmed">
            <field name="act_from" ref="sent"/>
            <field name="act_to" ref="confirmed"/>
            <field name="signal">confirm</field>
        </record>

        <record model="workflow.transition" id="productionrecord_sent_to_draft">
            <field name="act_from" ref="sent"/>
            <field name="act_to" ref="draft"/>
            <field name="signal">draft</field>
        </record>

        <record model="workflow.transition" id="productionrecord_confirmed_to_draft">
            <field name="act_from" ref="confirmed"/>
            <field name="act_to" ref="draft"/>
            <field name="signal">draft</field>
        </record>


    </data>
</openerp>